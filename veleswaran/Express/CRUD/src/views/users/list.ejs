<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

<div class="container mt-3">
  <h2 class="h2">Users list</h2>
  <a href="/user/create" class="btn btn-primary">Create users</a>
             
  <table class="table table-dark">
    <thead>
      <tr>
        <th>Name</th>
        <th>phone</th>
        <th>Email</th>
        <th>Image</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
        <% users.map((val)=>{ %>
            <tr>
                <td><%= val.name %></td>
                <td><%= val.phone %></td>
                <td><%= val.email %></td>
                <td><img src="/images/<%= val.image %>" alt="<%= val.image %>" width="100px" height="100px"></td>

                <td>
                    <a href="/user/edit/<%= val._id %>" class="btn btn-warning">Edit</a>
                    <a href="/user/delete/<%= val._id %>" class="btn btn-warning">Delete</a>
                </td>
            </tr>
        <% }) %>
    </tbody>
  </table>
</div>

</body>
</html>
